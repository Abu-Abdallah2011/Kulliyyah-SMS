commands:
  01_wkhtmltopdf_install:
    command: |
      sudo apt-get update
      sudo apt-get install -y gdebi-core
      sudo gdebi --non-interactive /usr/bin/wkhtmltox_0.12.6-1.bionic_amd64.deb
      sudo cp /usr/local/bin/wkhtmltopdf /usr/bin/
      sudo cp /usr/local/bin/wkhtmltoimage /usr/bin/
files:
  "/usr/bin/wkhtmltox_0.12.6-1.bionic_amd64.deb":
    mode: "000755"
    owner: root
    group: root
    source: https://github.com/wkhtmltopdf/packaging/releases/download/0.12.6-1/wkhtmltox_0.12.6-1.bionic_amd64.deb
